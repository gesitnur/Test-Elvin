<section class="login-company h-screen bg-white">
  <div class="container mx-auto h-full px-4">
    <div class="flex gap-x-10 justify-center items-center flex-wrap h-full">
      <%= image_tag asset_image("elvin/company-login-img.svg"), class: 'w-full lg:w-2/5 text-center', alt: 'company-login-img' %>
      <%= form_for(resource, as: resource_name, data: { turbo: false }, :html => {:class => 'company-login-form xl:w-5/12 lg:w-5/12 w-full md:mb-0'}, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
        <div class="flex flex-row items-center justify-center lg:justify-start gap-1 mb-5">
          <h1 class="text-xl font-bold mb-0 mr-4 text-center">Sign Up Company</h1>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-2 gap-4 mb-4">
          <div class="login-company-form-group col-span-2 sm:col-span-1">
            <%= f.text_field :name, placeholder: "Owner Name", class: 'form-control block w-full px-4 py-2 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-pacifixBlue focus:outline-none', id: 'name-input', required: true %>
            <%= f.hidden_field :position_id, value: Position.find_by_name('Owner').id %>
          </div>
          <div class="login-company-form-group col-span-2 sm:col-span-1">
            <%= f.email_field :email, placeholder: "Email address", class: 'form-control block w-full px-4 py-2 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-pacifixBlue focus:outline-none', id: 'email-company-input', required: true %>
          </div>
          <%= f.fields_for :company do |company_form| %>
          <div class="login-company-form-group col-span-2 sm:col-span-1">
            <%= company_form.text_field :name, placeholder: "Company Name", class: 'form-control block w-full px-4 py-2 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-pacifixBlue focus:outline-none', id: 'name-company-input', required: true %>
          </div>
          <div class="login-company-form-group col-span-2 sm:col-span-1">
            <%= company_form.text_field :address, placeholder: "Company Address", class: 'form-control block w-full px-4 py-2  font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-pacifixBlue focus:outline-none', id: 'email-company-input', required: true %>
          </div>
          <div  class="login-company-form-group col-span-2">
            <%= company_form.select :employee_range, options_for_select(@employee_ranges, company_form.object.employee_range),
                { include_blank: "Please Choose Employee Range" },
                {
                  class: "bg-white border outline-none text-gray-900 text-sm rounded-lg focus:border-pacifixBlue block w-full p-2.5", id: 'company-employee', required: true
                } %>
          </div>
          <% end %>
        </div>
        <div class="flex justify-between items-center mb-6">
          <div class="form-group form-check">
            <input type="checkbox" required class="form-check-input appearanceinline-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-pacifixBlue checked:border-pacifixBlue focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" id="input-check" />
            <label class="form-check-label -block text-gray-800" for="exampleCheck2">I accept the <a href="#" class="text-pacifixBlue hover:underline">Terms & Conditions</a></label>
          </div>
        </div>
        <div class="text-center lg:text-left">
          <%= f.submit "Sign Up", class: 'w-full mb-3 inline-block py-3 text-white font-medium text-sm uppercase rounded shadow-md bg-pacifixBlue hover:shadow-lg active:shadow-lg transition duration-150 ease-in-out' %>
          <p class="text-sm font-semibold">
            Have an account?
            <%= link_to 'Sign In', new_user_session_path, class: 'text-pacifixBlue' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</section>
