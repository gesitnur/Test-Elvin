<section class="login-employee bg-powderBlue h-screen overflow-hidden">
  <div class="flex items-center h-full">
    <div class="container max-w-lg mx-auto px-4 sm:px-0">
      <div class="w-32 h-32 bg-pacifixBlue rounded-full relative z-0 top-16"></div>
      <%= form_for(resource, as: resource_name, data: { turbo: false }, :html => {:class => 'max-w-sm mx-auto p-5 bg-white rounded-md z-10 bg-opacity-50 border-slate-100 border-2 relative shadow-xl'}, url: session_path(resource_name)) do |f| %>
        <h1 class="login-employee-title text-2xl font-bold text-center mb-5 text-slate-800">Sign In Employee</h1>
        <% if flash[:alert].present? %>
          <p class="alert"><%= flash[:alert] %></p>
        <% end %>
        <div class="login-employee-form-group">
          <%= f.label :email, class: 'mb-2 text-slate-800 font-semibold' %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'w-full mb-5 bg-white bg-opacity-20 p-2 shadow-md rounded-sm placeholder:text-slate-600 focus:outline-none focus:shadow-xl transition ease-in', placeholder: 'Your Email', required: true %>
        </div>
        <div class="login-employee-form-group">
          <%= f.label :password, class: 'text-slate-800 font-semibold' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full mb-10 bg-white bg-opacity-20 p-2 shadow-md placeholder:text-slate-600 focus:outline-none focus:shadow-xl transition ease-in', placeholder: 'Your Password', required: true %>
        </div>
        <%= f.submit "Sign In", class: 'w-full py-3 bg-africanViolet text-white rounded mb-5 shadow-md focus:shadow-2xl transition ease-in' %>
        <div class="flex justify-between gap-x-6">
          <a href="#" class="p-2 text-center bg-white shadow-sm text-slate-800 w-1/2 rounded hover:bg-slate-100 hover:shadow-lg transition ease-in"><i class="fab fa-google"></i> Google</a>
          <a href="#" class="p-2 bg-white text-center shadow-sm text-slate-800 w-1/2 rounded hover:bg-slate-100 hover:shadow-lg transition ease-in"><i class="fab fa-facebook"></i> Facebook</a>
        </div>
      <% end %>
      <div class="w-32 h-32 bg-fuchsiaCrayola rounded-full relative bottom-16 float-right"></div>
    </div>
  </div>
</section>
