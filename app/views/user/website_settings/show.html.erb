<div class="main-content-header mb-3">
  <h1 class="main-content-title text-3xl font-bold mb-5">Website Settings</h1>
</div>
<div class="main-content-card p-7 bg-white shadow-md rounded border">
<%= load_flash_alert %>
<%= load_flash_notice %>
  <table class="text-left w-full mb-4">
    <tr>
      <th class="py-1 w-1/3 ">Coming Soon Title</th>
      <td class="py-1"><%= @website_setting.coming_soon_title %></td>
    </tr>
    <tr>
      <th class="py-1 align-top">Coming Soon Description</th>
      <td class="py-1"><%= @website_setting.coming_soon_description %></td>
    </tr>
  </table>
  <div class="form-group">
    <%= link_to edit_user_website_settings_path, class: 'bg-pacifixBlue py-3 px-4 text-white rounded' do %>
      <i class="fa fa-edit" aria-hidden="true"></i> Edit
    <% end %>
  </div>
</div>
