<div class="relative w-full sm:w-2/3 mx-auto my-10 bg-white rounded p-5 ">
  <div class="modal-header mb-1">
    <h1 class="text-2xl font-bold"><%= position.name %></h1>
  </div>
  <button type="button" class="absolute right-4 top-3 text-xl text-slate-400 hideModal"><i class="fas fa-times"></i></button>
  <div class="modal-content grid grid-cols-1 lg:grid-cols-2 gap-4">
    <div class="modal-hrd-positon">
      <h1 class="p-2 border-y font-bold mb-3 bg-slate-100">HRD Position</h1>
      <div class="hrd-position-detail overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr>
              <th class="p-1 text-left w-36">Feature</th>
              <th class="p-1 text-center w-12">Create</th>
              <th class="p-1 text-center w-12">Read</th>
              <th class="p-1 text-center w-12">Update</th>
              <th class="p-1 text-center w-12">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% hrd_levels.each do |hrd_level| %>
              <tr>
                <td class="p-1 whitespace-nowrap"><%= hrd_level.to_s.titleize %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("hrd_#{hrd_level}", :create)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("hrd_#{hrd_level}", :read)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("hrd_#{hrd_level}", :update)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("hrd_#{hrd_level}", :delete)) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="modal-hrd-positon">
      <h1 class="p-2 border-y font-bold mb-3 bg-slate-100">Employee Position</h1>
      <div class="employee-position-detail overflow-x-auto">
         <table class="w-full">
          <thead>
            <tr>
              <th class="p-1 text-left w-36">Feature</th>
              <th class="p-1 text-center w-12">Create</th>
              <th class="p-1 text-center w-12">Read</th>
              <th class="p-1 text-center w-12">Update</th>
              <th class="p-1 text-center w-12">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% emp_levels.each do |emp_level| %>
              <tr>
                <td class="p-1 whitespace-nowrap"><%= emp_level.to_s.titleize %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("emp_#{emp_level}", :create)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("emp_#{emp_level}", :read)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("emp_#{emp_level}", :update)) %></td>
                <td class="p-1 text-center"><%= position_access(position.public_send("emp_#{emp_level}", :delete)) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
