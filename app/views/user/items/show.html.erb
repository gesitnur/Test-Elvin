<div class="main-content-header mb-3">
  <%= load_flash_alert %>
  <%= load_flash_notice %>
  <h1 class="main-content-title text-3xl font-bold mb-5">Show Item</h1>
</div>
<div class="main-content-card bg-white p-7 rounded shadow-md">
  <div class="flex justify-between flex-row-reverse">
    <%= link_to edit_user_item_path(@item), class: 'inline-block bg-pacifixBlue text-white mb-3 rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear' do %>
      <i class="fa fa-edit" aria-hidden="true"></i> Edit
    <% end %>
    <%= link_to user_items_path, class: 'border border-pacifixBlue inline-block mb-3 rounded hover:bg-slate-100 px-4 py-2 shadow hover:shadow-lg transition ease-linear' do %>
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
    <% end %>
  </div>
  <table class="w-full">
    <tr>
      <td class="font-bold w-1/3">Type</td>
      <td><%= @item.item_type %></td>
    </tr>
    <tr>
      <td class="font-bold">Name</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td class="font-bold">Unit</td>
      <td><%= @item.unit %></td>
    </tr>
    <tr>
      <td class="font-bold">Currency</td>
      <td><%= @item.currency. code %></td>
    </tr>
    <tr>
      <td class="font-bold">Price</td>
      <td><%= number_to_currency(@item.price, unit: @item.currency.symbol) %></td>
    </tr>
    <% if @item.tax_rate.present? %>
      <tr>
        <td class="font-bold">Tax</td>
        <td><%= "#{@item.tax_rate&.name} [#{@item.tax_rate&.rate}]" %> %</td>
      </tr>
    <% end %>
    <tr>
      <td class="font-bold">Description</td>
      <td><%= @item.description %></td>
    </tr>
  </table>
</div>
