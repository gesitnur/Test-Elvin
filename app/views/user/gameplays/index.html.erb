<%= load_flash_alert %>
<%= load_flash_notice %>
<div class="main-content-header mb-3">
  <h1 class="gameplay-header-title text-3xl mb-5 font-bold">Gameplay</h1>
</div>
<%= render 'user/gameplays/partials/search' %>
<div class="main-content-card bg-white p-7 rounded shadow-md">
  <div class="flow-root">
    <div class="float-right">
      <%= link_to new_user_gameplay_path, class: 'bg-pacifixBlue mb-3 inline-block text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear' do %>
        <i class="fa fa-plus" aria-hidden="true"></i> New Gameplay
      <% end %>
    </div>
  </div>
  <%= render partial: 'user/gameplays/partials/table',
                locals: { gameplays: @gameplays } %>
</div>
