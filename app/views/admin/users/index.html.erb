<div class="main-content-header mb-3">
  <%= load_flash_alert %>
  <%= load_flash_notice %>
  <h1 class="main-content-title text-3xl font-bold mb-5">Pegawai</h1>
</div>
<%= render 'admin/users/partials/search' %>
<div class="main-content-card bg-white p-7 rounded shadow-md">
  <div class="flow-root">
    <div class="float-right">
      <%= link_to new_admin_user_path, class: 'inline-block bg-pacifixBlue text-white mb-3 rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear' do %>
        <i class="fa fa-plus" aria-hidden="true"></i> Tambah Pegawai
      <% end %>
    </div>
  </div>
  <%= render partial: 'admin/users/partials/table',
              locals: { users: @users } %>
</div>
