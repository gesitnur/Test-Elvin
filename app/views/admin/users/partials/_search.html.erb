<%= search_form_for @q, url: admin_users_path,
                        html: { method: :get, class: 'gap-2 mb-2 bg-white p-7 shadow-md mb-5 rounded', id: 'search-admin-form', autocomplete: 'off' } do |f| %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
    <div class="form-group">
      <label for="name" class="font-bold block">Nama</label>
      <%= f.text_field :name_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <label for="name" class="font-bold block">Email</label>
      <%= f.text_field :email_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Email' %>
    </div>
  </div>
  <div class="form-group">
    <button class="bg-pacifixBlue inline-block text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear mr-2">Search</button>
    <%= link_to "Reset", admin_users_path, class: 'bg-white inline-block text-black border border-pacifixBlue rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear' %>
  </div>
<% end %>
