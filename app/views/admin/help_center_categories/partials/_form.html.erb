<div class="modal-backdrop fixed inset-0 bg-gray-900 opacity-40"></div>
<div class="modal-wrap fixed inset-0 flex items-center justify-center z-50 px-5">
  <div class="bg-white rounded-md m-auto shadow-lg w-full sm:w-[450px]">
    <%= form_for(forum_category, url: url, html: {autocomplete: 'off'}, remote: true) do |f| %>

      <div class="modal-content p-4 gap-4">
        <%= f.label :name, 'Name', class: 'font-bold block' %>
        <%= f.text_field :name, class: "w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in", required: true %>
      </div>
      <div class="modal-footer p-4 border-t text-right">
        <button type="button" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 mr-2 rounded hideModal" data-modal="modalReject">Close</button>
        <%= f.submit 'Submit', class: 'bg-pacifixBlue hover:shadow-lg text-white px-4 py-2 rounded' %>
      </div>
    <% end %>
  </div>
</div>
