<%= load_flash_alert %>
<%= load_flash_notice %>
<%= form_for(admin, url: url, html: {class: 'grid grid-cols-1 gap-4'}) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: 'font-bold block' %>
    <%= f.text_field :name, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Name', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :domain_access, "Domain Access", class: 'font-bold block' %>
    <%= f.select :domain_access, options_for_select(domain_accesses - ['All'], f.object.domain_access), {include_blank: 'Select Domain Access'}, {class: "w-full p-2 rounded outline-none bg-white border border-slate-300 focus:border-pacifixBlue transition ease-in", id: 'domain-access', required: true } %>
  </div>
  <div class="form-group flex gap-2">
    <button type="submit" class="bg-pacifixBlue text-white px-5 py-2 rounded hover:shadow-lg transition ease-in">Submit</button>
    <button type="reset" class="border border-pacifixBlue px-5 py-2 rounded hover:bg-slate-100 transition ease-in">Reset</button>
  </div>
<% end %>
