<%= search_form_for @q, url: admin_admins_path,
                        html: { method: :get, class: 'gap-2 mb-2', id: 'search-admin-form' } do |f| %>
  <div class="bg-white p-7 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-2 rounded shadow-md mb-5">
    <div class="form-group">
      <%= f.label :domain_access_eq, "Domain Access", class: 'font-bold block' %>
      <%= f.select :domain_access_eq, options_for_select(@domain_accesses, params[:q] ? params[:q][:domain_access_eq] : nil), {include_blank: 'All admin data'}, {class: "w-full p-2 rounded outline-none bg-white border border-slate-300 focus:border-pacifixBlue py-[6px] select-dropdown", id: 'admin-domain-access-field', 'data-url': admin_admins_path} %>
    </div>
    <div class="form-group">
      <label for="name" class="font-bold block">Name</label>
      <%= f.text_field :name_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <label for="name" class="font-bold block">Login Uniq</label>
      <%= f.text_field :login_uniq_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Login Uniq' %>
    </div>
    <div class="form-group">
      <button class="bg-pacifixBlue text-white py-2 px-4 rounded mr-2">Search</button>
      <%= link_to "Reset", admin_admins_path, class: 'inline-block border border-pacifixBlue py-2 px-4 rounded hover:bg-slate-100 transition ease-in', method: :get %>
    </div>
  </div>
<% end %>
