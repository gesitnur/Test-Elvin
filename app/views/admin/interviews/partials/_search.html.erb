<%= search_form_for @q, url: user_interviews_path,
                        html: { method: :get, class: 'gap-2 mb-2 bg-white p-7 shadow-md mb-5 rounded', id: 'search-admin-form' } do |f| %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
    <div class="form-group">
      <label for="name" class="font-bold block">Name</label>
      <%= f.text_field :name_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <%= f.label :gender_eq, "Gender", class: 'font-bold block' %>
      <%= f.select :gender_eq, options_for_select(@genders, params[:q] ? params[:q][:gender_eq] : nil), {include_blank: 'All'}, {class: "w-full p-2 rounded outline-none bg-white border border-slate-300 focus:border-pacifixBlue py-[6px] select-dropdown", id: 'admin-domain-access-field', 'data-url': admin_admins_path} %>
    </div>
    <div class="form-group">
      <label for="graduated" class="font-bold block">Graduated</label>
      <%= f.text_field :graduated_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Graduated' %>
    </div>
    <div class="form-group">
      <label for="domicile" class="font-bold block">Domicile</label>
      <%= f.text_field :domicile_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Domicile' %>
    </div>
  </div>
  <div class="form-group">
    <button class="bg-pacifixBlue inline-block text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear mr-2">Search</button>
    <%= link_to "Reset", user_interviews_path, class: 'bg-white inline-block text-black border border-pacifixBlue rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear', method: :get %>
  </div>
<% end %>
