<%= search_form_for @q, url: admin_help_centers_path,
                        html: { method: :get, class: 'gap-2 mb-2 bg-white p-7 shadow-md mb-5 rounded', id: 'search-admin-form' } do |f| %>
  <div class="grid grid-cols-1 grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
    <div class="form-group">
      <label for="title" class="font-bold block">Title</label>
      <%= f.text_field :title_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded focus:outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Title' %>
    </div>
    <div class="form-group">
      <%= f.label :is_admin_, "Thread", class: 'font-bold block' %>
      <select class="w-full p-2 rounded focus:outline-none bg-white border border-slate-300 focus:border-pacifixBlue py-[6px] select-dropdown" name="thread">
      	<option value="">All</option>
      	<option value="official" <%= 'selected' if params[:thread].eql?('official') %>>Official</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <button class="bg-pacifixBlue inline-block text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear mr-2">Search</button>
    <%= link_to "Reset", admin_help_centers_path, class: 'bg-white inline-block text-black border border-pacifixBlue rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear', method: :get %>
  </div>
<% end %>
