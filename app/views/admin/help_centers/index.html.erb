<div class="main-content-header mb-3">
  <%= load_flash_alert %>
  <%= load_flash_notice %>
  <h1 class="main-content-title text-3xl font-bold mb-5">Thread</h1>
</div>
<%= render 'admin/help_centers/partials/search' %>
<div class="main-content-card bg-white p-7 rounded shadow-md">
  <div class="flow-root">
    <div class="float-right">
      <%= link_to new_admin_help_center_path, class: 'inline-block bg-pacifixBlue text-white mb-3 rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear' do %>
        New Thread
      <% end %>
    </div>
  </div>
  <%= render partial: 'admin/help_centers/partials/table',
              locals: { forums: @forums } %>
</div>
