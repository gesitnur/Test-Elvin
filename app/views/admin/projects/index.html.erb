  <div class="flow-root">
    <div class="float-right">
      <%= link_to new_admin_project_path, class: 'inline-block bg-pacifixBlue text-white mb-3 rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear', remote: true do %>
        <i class="fa fa-plus" aria-hidden="true"></i> Project Baru
      <% end %>
    </div>
  </div>
  <%= render partial: 'admin/projects/partials/table',
              locals: { projects: @projects } %>
