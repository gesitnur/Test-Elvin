<%= search_form_for @q, url: user_interviews_path,
                        html: { method: :get, class: 'gap-2 mb-2 bg-white p-7 shadow-md mb-5 rounded', id: 'search-admin-form' } do |f| %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
    <div class="form-group">
      <label for="name" class="font-bold block">Nama</label>
      <%= f.text_field :name_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <label for="description" class="font-bold block">Deskripsi</label>
      <%= f.text_field :description_cont, class: 'w-full border border-slate-300 py-[7px] px-3 rounded outline-none focus:border-pacifixBlue transition ease-in', placeholder: 'Description' %>
    </div>
  </div>
  <div class="form-group">
    <button class="bg-pacifixBlue inline-block text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear mr-2">Cari</button>
    <%= link_to "Reset", user_interviews_path, class: 'bg-white inline-block text-black border border-pacifixBlue rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear', method: :get %>
  </div>
<% end %>
