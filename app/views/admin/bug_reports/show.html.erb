<%= load_flash_alert %>
<%= load_flash_notice %>

<div class="main-content-header flex justify-between">
  <h1 class="text-3xl font-bold mb-3 main-content-title">Detail Bug Report</h1>
</div>
<div class="grid grid-cols-1 gap-6">
  <div class="main-content-card bg-white p-6 rounded w-full shadow-lg">
    <div class="main-content-button flex justify-between items-center flex-row-reverse mb-3">
      <div class="flex flex-col sm:flex-row gap-2 text-right">
        <% if @bug_report.submitted? %>
          <div class="group relative">
            <div class="modal fixed z-50 hidden" id="modal">
              <div class="modal-backdrop fixed inset-0 bg-gray-900 opacity-40"></div>
                <div class="modal-content fixed inset-0 flex items-center justify-center z-50 px-5">
                  <div class="bg-white p-6 rounded-md m-auto shadow-lg w-full sm:w-1/2 lg:w-1/3">
                    <p class="mb-4 text-left">Are you sure?</p>
                    <div class="flex justify-end">
                      <button class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded mr-2 hideModal">Cancel</button>
                      <%= link_to set_to_fixed_admin_bug_report_path(@bug_report), method: :patch, class: 'bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600' do %>
                        Has Been Fixed
                      <% end %>
                    </div>
                </div>
              </div>
            </div>
            <button class="inline-block bg-green-500 text-white rounded py-2 px-4 shadow hover:shadow-lg transition ease-linear showModal">
              <span class="h-full"><i class="fa fa-check m-auto" aria-hidden="true"></i></span>
            </button>
            <span class="pointer-events-none absolute top-[46px] -right-3 bg-gray-500 text-white py-1 px-2 rounded w-max opacity-0 transition-opacity group-hover:opacity-100" >
               Has Been Fixed
            </span>
          </div>
        <% end %>
      </div>
      <%= link_to admin_bug_reports_path, class: 'border border-pacifixBlue inline-block mb-3 rounded hover:bg-slate-100 px-4 py-2 shadow hover:shadow-lg transition ease-linear' do %>
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="grid gap-4">
      <div class="group">
        <label for="email" class="font-semibold">Title</label>
        <p><%= @bug_report.title %></p>
      </div>
      <div class="group">
        <label for="email" class="font-semibold">Submitted Date</label>
        <p><%= date_formater(@bug_report.created_at, '%d %h %Y, %I:%M %p') %></p>
      </div>
      <div class="group">
        <label for="date-of-birth" class="font-semibold">Url</label>
        <p><%= @bug_report.url %></p>
      </div>
      <div class="group">
        <label for="major" class="font-semibold">Description</label>
        <div class=" border-solid border border-gray-300 p-2">
          <p class=""><%= @bug_report.description.html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</div>
