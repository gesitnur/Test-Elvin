<div class="content-header">
  <div class="content-layer d-flex flex-column justify-content-center align-items-center text-light">
    <div class="container">
      <h1 class="fw-bold text-uppercase fw-semibold">contact us</h1>
    </div>
  </div>
</div>
<section class="contact-content mb-4">
  <div class="row">
    <div class="col-md-6 content-panel py-5">
      <div class="container contact-desc-wrap w-50">
        <div class="contact-desc">
          <h2 class="text-uppercase fw-bold">get in touch</h2>
          <p class="mb-5">
            If you have any questions about NineOd Freight or how we can support
            your business, please contact us directly by selecting from one of
            the below categories that is the most relevant to your inquiry and
            fill our short feedback form.
          </p>
          <div class="contact-content-text d-flex align-items-center mb-4">
            <i class="fas fa-phone fs-2"></i>
            <span class="fs-5 w-100 ms-3">+62 877-6854-4569</span>
          </div>
          <div class="contact-content-text d-flex align-items-center mb-4">
            <i class="fas fa-map-marker-alt fs-2"></i>
            <span class="fs-5 w-100 ms-3">Jl. Sentra Raya No.11, Town Place Baros</span>
          </div>
          <div class="contact-content-text d-flex align-items-center">
            <i class="fas fa-envelope fs-2"></i>
            <span class="fs-5 w-100 ms-3">info@nineodfreight.com</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="container contact-form-wrap w-75 py-5">
        <%= form_for(@contact_request, url: contact_requests_path, method: :post, remote: true, html: {class: 'contact-form'}) do |f| %>
          <%= f.hidden_field :domain_request, value: request.domain, required: true %>
          <%= f.text_field :name, class: 'w-100 px-4 py-3 contact-input mb-3 rounded', placeholder: 'E.G., KAT', required: true %>
          <%= f.email_field :email, class: 'w-100 px-4 py-3 contact-input mb-3 rounded', placeholder: 'E.G., mail@example.com', required: true %>
          <%= f.text_field :subject, class: 'w-100 px-4 py-3 contact-input mb-3 rounded', placeholder: 'type your subject here...', required: true %>
          <%= f.text_area :message, class: 'w-100 px-4 py-3 contact-input mb-3 rounded', placeholder: 'type your message here...', cols: '30', rows: '7', required: true %>
          <div class="w-100 d-flex justify-content-center">
            <button class="text-uppercase fw-bolder btn-contact rounded py-2">
              submit
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<footer class="py-3 mt-3">
  <div class="container">
    <div class="row gx-0">
      <div class="col-md-4">
        <p class="fw-light footer-title">Nineod Freight &copy; All Rights Reserved</p>
      </div>
      <div class="col-md-4">
        <p class="fw-light text-center">
          <a href="#" class="text-decoration-none text-dark">Proudly created</a>
          with <%= image_tag asset_image("nineod-freight/love-footer.svg"), class: 'img-footer' %> by
          <a href="https://www.nineod.com/" class="text-decoration-none text-dark">nineod.com</a>
        </p>
      </div>
      <div class="col-md-4">
        <div class="media-social-icon d-flex justify-content-end">
          <a href="#" class="text-secondary">
            <i class="fab fa-facebook-f me-3"></i>
          </a>
          <a href="#" class="text-secondary">
            <i class="fab fa-twitter me-3"></i>
          </a>
          <a href="#" class="text-secondary">
            <i class="fab fa-instagram me-3"></i>
          </a>
          <a href="#" class="text-secondary">
            <i class="fab fa-linkedin-in me-3"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
